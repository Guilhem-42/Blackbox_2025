# Journalist Finder Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# TWITTER API CONFIGURATION
# =============================================================================
# Get your Twitter API keys from: https://developer.twitter.com/
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# =============================================================================
# LINKEDIN API CONFIGURATION
# =============================================================================
# Get your LinkedIn API credentials from: https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:8080/callback

# Legacy LinkedIn credentials (for web scraping - use with caution)
# LINKEDIN_USERNAME=your_linkedin_email@example.com
# LINKEDIN_PASSWORD=your_linkedin_password

# =============================================================================
# NEWS API CONFIGURATION
# =============================================================================
# Get your NewsAPI key from: https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key_here

# =============================================================================
# CLEARBIT CONFIGURATION
# =============================================================================
# Get your Clearbit key from: https://clearbit.com/
CLEARBIT_KEY=your_clearbit_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (default - no configuration needed)
DATABASE_URL=sqlite:///data/journalists.db

# PostgreSQL (uncomment and configure if using PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/journalist_finder

# MySQL (uncomment and configure if using MySQL)
# DATABASE_URL=mysql://username:password@localhost:3306/journalist_finder

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/journalist_finder.log

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================
# Delay between requests (seconds) - be respectful to websites
SCRAPING_DELAY=2

# Maximum retries for failed requests
MAX_RETRIES=3

# Request timeout (seconds)
TIMEOUT=30

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================
# Maximum results per platform during full search
MAX_RESULTS_PER_PLATFORM=100

# Minimum reputation score for filtering
MIN_REPUTATION_SCORE=0.5

# Minimum AI relevance score for filtering
MIN_AI_RELEVANCE_SCORE=0.5

# =============================================================================
# EXPORT CONFIGURATION
# =============================================================================
# Default export format (json, csv, md)
DEFAULT_EXPORT_FORMAT=json

# Export directory
EXPORT_DIR=exports

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# =============================================================================
# Set to true for development mode (more verbose logging, etc.)
DEBUG_MODE=false

# Test database URL (used during testing)
TEST_DATABASE_URL=sqlite:///:memory:

# Enable/disable specific scrapers for testing
ENABLE_TWITTER_SCRAPER=true
ENABLE_LINKEDIN_SCRAPER=true
ENABLE_NEWSAPI_SCRAPER=true
ENABLE_CLEARBIT_SCRAPER=true
ENABLE_NEWSPAPER_SCRAPER=true
ENABLE_GOOGLE_SCHOLAR_SCRAPER=true
ENABLE_RESEARCHGATE_SCRAPER=true

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Twitter API rate limits (requests per 15-minute window)
TWITTER_RATE_LIMIT=180

# LinkedIn API rate limits (requests per day)
LINKEDIN_RATE_LIMIT=1000

# NewsAPI rate limits (requests per day)
NEWSAPI_RATE_LIMIT=1000

# Clearbit rate limits (requests per month)
CLEARBIT_RATE_LIMIT=1000

# =============================================================================
# PROXY CONFIGURATION (Optional)
# =============================================================================
# HTTP proxy (if needed)
# HTTP_PROXY=http://proxy.example.com:8080

# HTTPS proxy (if needed)
# HTTPS_PROXY=https://proxy.example.com:8080

# =============================================================================
# NOTIFICATION CONFIGURATION (Optional)
# =============================================================================
# Email notifications for completed searches
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=recipient@example.com

# Slack webhook for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Custom user agent for web scraping
USER_AGENT=JournalistFinder/1.0 (+https://github.com/yourusername/journalist-finder)

# Enable/disable caching
ENABLE_CACHING=true

# Cache directory
CACHE_DIR=cache

# Cache expiration time (hours)
CACHE_EXPIRATION=24

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=5

# Enable/disable SSL verification (set to false only for development)
SSL_VERIFY=true
